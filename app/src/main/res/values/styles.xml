<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="searchTextStyle">
        <item name="drawableTint">@color/search_drawable_tint</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
]        <item name="android:background">@null</item>
    </style>

    <style name="topicsStyle">
        <item name="android:background">@drawable/chip_text_background</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#408AAA</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

    </style>
</resources>